<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:background="@color/colorNav">

    <LinearLayout
        android:id="@+id/headerRows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorNavHover"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/headerColumns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/headerLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    android:src="@drawable/icon"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/headerRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorNavLink"
                    android:fontFamily="sans-serif-light"
                    android:text="@string/title"
                    android:textSize="37.5sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>